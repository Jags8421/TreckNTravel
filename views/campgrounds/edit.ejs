<!--Form to edit Campgrounds-->
<%-include("../partials/header")%>
<!--Container for the Form to edit Campgrounds Information-->
<div class="container">
	<h1 style="text-align:center;">
			Edit <%=camp.name%>
	</h1>
	<div class="row">
		<div style="margin:30px auto;">
			<form action="/index/<%=camp._id%>?_method=PUT" method="post">
  	  			<div class="form-group">
      				<input type="text" class="form-control" id="inputEmail3" name="name" placeholder="Name" style="width: 20rem;"value="<%=camp.name%>" required>
		  		</div>
    			<div class="form-group">
      				<input type="text" class="form-control" id="inputPassword3" name="image" placeholder="ImageURL" style="width: 20rem;" value="<%=camp.image%>" required>
				</div>
				<div class="form-group">
      				<input type="text" class="form-control" id="inputPassword3" name="description" placeholder="Description" style="width: 20rem;x" value="<%=camp.description%>" required>
				</div>
				<div class="form-group">
					<select class="form-control" id="exampleFormControlSelect1" name="rating">
      					<option>1</option>
      					<option>2</option>
      					<option>3</option>
      					<option>4</option>
      					<option>5</option>
    				</select>
				</div>
				<div class="form-group">
      				<button type="submit" class="btn btn-primary btn-block" >Update</button>
				</div>
			</form>
		</div>
	</div>
</div>
<!--Button to go to Campgrounds page-->
<div class="container">
	<a href="/index" class="btn btn-primary btn-sm">Campgrounds</a>
</div>
<%-include("../partials/footer")%>
