<!--Form to add new Campground-->
<%-include("../partials/header")%>
<!--Container for the Form to add Campground-->
<div class="container">
	<h1 style="text-align:center;">
			Add new Camp Ground
	</h1>
	<div class="row">
		<div style="margin:30px auto;">
			<form action="/create" method="post">
  	  			<div class="form-group">
      				<input type="text" class="form-control" id="inputEmail3" name="name" placeholder="Name" style="width: 20rem;" required>
		  		</div>
    			<div class="form-group">
      				<input type="text" class="form-control" id="inputPassword3" name="image" placeholder="ImageURL" style="width: 20rem;" required>
				</div>
				<div class="form-group">
      				<input type="text" class="form-control" id="inputPassword3" name="description" placeholder="Description" style="width: 20rem;x" required>
				</div>
				<div class="form-group">
					<select class="form-control" id="exampleFormControlSelect1" name="rating">
      					<option>1</option>
      					<option>2</option>
      					<option>3</option>
      					<option>4</option>
      					<option>5</option>
    				</select>
				</div>
				<div class="form-group">
      				<button type="submit" class="btn btn-primary btn-block" >Add</button>
				</div>
			</form>
		</div>
	</div>
</div>
<!--Button to go to Campgrounds page-->
<div class="container">
	<a href="/index" class="btn btn-primary btn-sm">Campgrounds</a>
</div>
<%-include("../partials/footer")%>
