<!--Form to edit Comment-->
<%-include("../partials/header")%>
<!--Container to hold Form-->
<div class="container">
	<h1 style="text-align:center;">
			Edit Comment of <%=id.name%>
	</h1>
	<div class="row">
		<div style="margin:30px auto; width:30rem;">
			<form action="/index/<%=id._id%>/comment/<%=commentid._id%>?_method=PUT" method="post">
				<div class="form-group">
      				<textarea  rows="4" col="30" class="form-control" name="comment" placeholder="Add Comment" required><%=commentid.comment%></textarea>
				</div>
				<div class="form-group">
					<select class="form-control" id="exampleFormControlSelect1" name="rating">
      					<option>1</option>
      					<option>2</option>
      					<option>3</option>
      					<option>4</option>
      					<option>5</option>
    				</select>
				</div>
				<div class="form-group">
      				<button type="submit" class="btn btn-primary btn-block" >Post</button>
				</div>
			</form>
		</div>
	</div>
</div>
<!--Button to go back to Campgrounds-->
<div class="container">
	<a href="/index" class="btn btn-primary btn-sm">Campgrounds</a>
</div>
<%-include("../partials/footer")%>
